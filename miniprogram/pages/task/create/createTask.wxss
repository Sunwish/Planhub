/* miniprogram/pages/plan/create/createPlan.wxss */

@import "../../../style/common.wxss";

view{
  margin: 30rpx 24rpx;
}

.basic-info{
  font-size: 32rpx;
}

.basic-info input{
  padding-left: 24rpx;
  height: 70rpx;
  background-color: #ffffff;
  border-style: solid;
  border-color: #ccc;
  border-width: 2rpx;
  border-radius: 5rpx;
  margin-bottom: 24rpx;
}

.basic-info textarea{
  width: 100%;
  text-indent: 24rpx;
  padding-top: 12rpx;
  height: 200rpx;
  background-color: #ffffff;
  border-style: solid;
  border-color: #ccc;
  border-width: 2rpx;
  border-radius: 5rpx;
}

.plan-config input{
  border-style: solid;
  border-color: #aaa;
  border-width: 0 0 2rpx 0;
  font-size: 32rpx;
}

.button-view{
  position: absolute;
  left: 15rpx;
  right: 15rpx;
  bottom: 36rpx;
  height: 88rpx;
  text-align: center;
}

.button-create{
  position: relative;
  background-color: rgb(61, 149, 238);
  color: #fff;
  font-size: 32rpx;
  font-weight: normal;
  height: 88rpx;
  line-height: 88rpx;
}